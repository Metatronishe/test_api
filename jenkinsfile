#!/usr/bin/env groovy

pipeline {
	
	agent any

	stage('Test') {
		steps {
			sh 'python -m unittest ${workspace}/test jenkinsfile/api_test'
		}

		post {
			failure {
				mail to: 'qa@example.com',
				subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
				body: "Something is wrong with ${env.BUILD_URL}"
			}
		}
	}
}
